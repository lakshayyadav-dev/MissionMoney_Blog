<%- include("partials/header"); -%>
<h1 class="compose-heading">Compose</h1>
<form class="" action="/compose" method="post">
    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" required/>
        <label>Cover Image URL</label>
        <input type="text" name="coverimg" autocomplete="off" required/>
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off" required/>
        <label>Plain Text</label>
        <textarea rows="10" cols="30" name="postPreview" class="form-control"></textarea>
        <label>HTML Text</label>
        <textarea class="form-control" name="postBody" rows="20" cols="30"></textarea>
    </div>
    <button class="btn" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer"); -%>
